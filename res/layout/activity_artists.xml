<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding"
    tools:context="com.example.mkreh.musicstructure.ArtistsActivity">

    <ListView
        android:id="@+id/artists"
        style="@style/secondStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3"></ListView>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/songCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/songs"
            style="@style/childMenu"
            android:background="@color/songs"
            android:text="Songs" />

        <TextView
            android:id="@+id/playlists"
            style="@style/childMenu"
            android:background="@color/playlists"
            android:text="Playlists" />
    </LinearLayout>

</LinearLayout>